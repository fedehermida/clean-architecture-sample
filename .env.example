# Server Configuration
NODE_ENV=development
PORT=3000
HTTP_SERVER=express

# Repository Type Selection
# Options: 'inmemory', 'typeorm', 'mongoose', 'firebase'
REPOSITORY_TYPE=inmemory

# Authentication Provider Selection
# Options: 'inmemory', 'firebase', 'jwt'
AUTH_PROVIDER=inmemory

# JWT Configuration (for jwt auth provider)
JWT_SECRET=clean-architecture-demo-secret

# CORS Configuration
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# PostgreSQL / TypeORM Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clean_architecture
DB_USER=postgres
DB_PASSWORD=postgres

# MongoDB / Mongoose Configuration
MONGO_URI=
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=clean_architecture
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin

# Firebase / Firestore Configuration
FIREBASE_PROJECT=clean-architecture-dev

# Firebase Emulator Configuration (for local development)
# When running in Docker, these are automatically set to use service names
# When running locally, use localhost
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8083
PUBSUB_EMULATOR_HOST=localhost:8085
FUNCTIONS_EMULATOR_HOST=localhost:5001
FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
