# Server Configuration
NODE_ENV=development
PORT=3000
HTTP_SERVER=express

# Repository Type Selection
# Options: 'inmemory', 'typeorm', 'mongoose', 'firebase'
REPOSITORY_TYPE=inmemory

# Authentication Provider Selection
# Options: 'inmemory', 'firebase', 'jwt'
AUTH_PROVIDER=inmemory

# JWT Configuration (for jwt auth provider)
JWT_SECRET=clean-architecture-demo-secret

# CORS Configuration
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# PostgreSQL / TypeORM Configuration
# Use 'postgres' for Docker, 'localhost' for local development without Docker
DB_HOST=postgres
DB_PORT=5432
DB_NAME=clean_architecture
DB_USER=postgres
DB_PASSWORD=postgres

# MongoDB / Mongoose Configuration
# Use 'mongodb' for Docker, 'localhost' for local development without Docker
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB_NAME=clean_architecture
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin
MONGO_URI=mongodb://admin:admin@mongodb:27017/clean_architecture?authSource=admin&directConnection=true

# Firebase / Firestore Configuration
FIREBASE_PROJECT=clean-architecture-dev

# Firebase Emulator Configuration
# Use 'firebase-emulator' for Docker, 'localhost' for local development without Docker
FIREBASE_AUTH_EMULATOR_HOST=firebase-emulator:9099
FIRESTORE_EMULATOR_HOST=firebase-emulator:8083
PUBSUB_EMULATOR_HOST=firebase-emulator:8085
FUNCTIONS_EMULATOR_HOST=firebase-emulator:5001
FIREBASE_DATABASE_EMULATOR_HOST=firebase-emulator:9000
FIREBASE_STORAGE_EMULATOR_HOST=firebase-emulator:9199
