# Server Configuration
NODE_ENV=development
PORT=3000
HTTP_SERVER=express

# CORS Configuration
# Comma-separated list of allowed frontend origins
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# PostgreSQL / TypeORM Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clean_architecture
DB_USER=postgres
DB_PASSWORD=postgres

# MongoDB / Mongoose Configuration
# Use MONGO_URI for full connection string, or MONGO_HOST/MONGO_PORT for individual parts
# MONGO_URI=mongodb://localhost:27017
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=clean_architecture

# MongoDB Root Credentials (for Docker Compose)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin
