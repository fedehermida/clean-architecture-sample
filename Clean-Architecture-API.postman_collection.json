{
  "info": {
    "name": "Clean Architecture API",
    "description": "API collection for Clean Architecture TypeScript project",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "    console.log('User ID saved:', jsonData.userId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/register",
              "host": ["{{baseUrl}}"],
              "path": ["register"]
            },
            "description": "Register a new user with email and password"
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/register",
                  "host": ["{{baseUrl}}"],
                  "path": ["register"]
                }
              },
              "status": "Created",
              "code": 201,
              "body": "{\n  \"userId\": \"123e4567-e89b-12d3-a456-426614174000\"\n}"
            },
            {
              "name": "Validation Error",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"invalid-email\",\n  \"password\": \"123\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/register",
                  "host": ["{{baseUrl}}"],
                  "path": ["register"]
                }
              },
              "status": "Bad Request",
              "code": 400,
              "body": "{\n  \"error\": \"Invalid email, String must contain at least 8 character(s)\"\n}"
            },
            {
              "name": "Duplicate Email",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"existing@example.com\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/register",
                  "host": ["{{baseUrl}}"],
                  "path": ["register"]
                }
              },
              "status": "Bad Request",
              "code": 400,
              "body": "{\n  \"error\": \"Email already in use\"\n}"
            }
          ]
        },
        {
          "name": "Get User By ID",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Use saved userId or use a test ID",
                  "if (!pm.variables.get('userId')) {",
                  "    pm.variables.set('userId', '123e4567-e89b-12d3-a456-426614174000');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Retrieve a user by their ID"
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/users/123e4567-e89b-12d3-a456-426614174000",
                  "host": ["{{baseUrl}}"],
                  "path": ["users", "123e4567-e89b-12d3-a456-426614174000"]
                }
              },
              "status": "OK",
              "code": 200,
              "body": "{\n  \"id\": \"123e4567-e89b-12d3-a456-426614174000\",\n  \"email\": \"user@example.com\",\n  \"createdAt\": \"2024-01-01T00:00:00.000Z\"\n}"
            },
            {
              "name": "User Not Found",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/users/00000000-0000-0000-0000-000000000000",
                  "host": ["{{baseUrl}}"],
                  "path": ["users", "00000000-0000-0000-0000-000000000000"]
                }
              },
              "status": "Not Found",
              "code": 404,
              "body": "{\n  \"error\": \"User not found\"\n}"
            }
          ]
        },
        {
          "name": "Delete User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Use saved userId or use a test ID",
                  "if (!pm.variables.get('userId')) {",
                  "    pm.variables.set('userId', '123e4567-e89b-12d3-a456-426614174000');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Delete a user by their ID"
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "DELETE",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/users/123e4567-e89b-12d3-a456-426614174000",
                  "host": ["{{baseUrl}}"],
                  "path": ["users", "123e4567-e89b-12d3-a456-426614174000"]
                }
              },
              "status": "No Content",
              "code": 204,
              "body": ""
            },
            {
              "name": "User Not Found",
              "originalRequest": {
                "method": "DELETE",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/users/00000000-0000-0000-0000-000000000000",
                  "host": ["{{baseUrl}}"],
                  "path": ["users", "00000000-0000-0000-0000-000000000000"]
                }
              },
              "status": "Not Found",
              "code": 404,
              "body": "{\n  \"error\": \"User not found\"\n}"
            }
          ]
        }
      ],
      "description": "User management endpoints"
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ]
}

