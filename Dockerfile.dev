FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Verify reflect-metadata is installed
RUN npm list reflect-metadata || npm install reflect-metadata

# Copy source code
COPY . .

# Expose application port
EXPOSE 3000

# Expose Node.js debugger port
EXPOSE 9229

# Set environment to development
ENV NODE_ENV=development

# Default: Start with nodemon for hot reloading (use dev:debug for debugging)
CMD ["npm", "run", "dev"]

